<LoginWindow>:
	name: 'login'
	userName: userName
	lastName: lastName
	hidden: hidden
	FloatLayout:
		Label:
			text:"User Name: "
			font_size: (root.width**2 + root.height**2) / 13**4
			pos_hint: {"x":0.1, "top":0.9}
			size_hint: 0.35, 0.06

		TextInput:
			id: userName
			font_size: (root.width**2 + root.height**2) / 13**4
			multiline: False
			pos_hint: {"x": 0.45 , "top":0.9}
			size_hint: 0.35, 0.06

		Label:
			text:"Last Name: "
			font_size: (root.width**2 + root.height**2) / 13**4
			pos_hint: {"x":0.1, "top":0.7}
			size_hint: 0.35, 0.06

		TextInput:
			id: lastName
			font_size: (root.width**2 + root.height**2) / 13**4
			multiline: False
			pos_hint: {"x": 0.45, "top":0.7}
			size_hint: 0.35, 0.06

		Button:
			pos_hint:{"x":0.3,"y":0.1}
			size_hint: 0.4, 0.06
			font_size: (root.width**2 + root.height**2) / 14**4
			text: "Submit"
			on_release:
				root.manager.transition.direction = "left"
				root.SubmitBtn()
		Label:
			id: hidden
			font_size: (root.width**2 + root.height**2) / 15**4
			pos_hint: {"x":0.3, "top":0.5}
			size_hint: 0.4, 0.06


<MainWindow>:
	name: 'main'
	fName: fName
	lName: lName
	FloatLayout:
		Label:
			text: 'Welcome'
			size_hint: 0.5, 0.2
			font_size: (root.width**2 + root.height**2) / 14**4
			pos_hint: {"x":0, "top":1}

		Label:
			id: fName
			font_size: (root.width**2 + root.height**2) / 13**4
			pos_hint: {"x":0, "top":0.9}
			size: 0.4, 0.1

		Label:
			id: lName
			font_size: (root.width**2 + root.height**2) / 13**4
			pos_hint: {"x":0, "top":0.8}
			size: 0.4, 0.1

		Button:
			pos_hint:{"x":0.3,"y":0.1}
			size_hint: 0.4, 0.06
			font_size: (root.width**2 + root.height**2) / 14**4
			text: "back"
			on_release:
				root.manager.transition.direction = 'right'
				app.root.current = 'login'